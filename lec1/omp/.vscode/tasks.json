{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\mingw-w64\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-fopenmp",
				"-mveclibabi=svml",
				"-ffast-math",
				"-march=native",
				"-O2",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:\\mingw-w64\\mingw64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}